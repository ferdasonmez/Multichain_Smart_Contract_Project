{
  "compilerOptions": {
  "target": "es6",
  "module": "commonjs",
  "declaration": true,
  "typeRoots": ["@types", "node_modules/@types"],
  "declarationMap": true,
  "sourceMap": true,
  "esModuleInterop": true,
  "outDir": "./dist",
  "forceConsistentCasingInFileNames": true,
  "rootDirs": ["./contracts", "./scripts", "./test", "./node_modules/hardhat"],
  "strict": true,
  "skipLibCheck": true,
  "baseUrl": "./",
  "paths": {
    "*": ["src/*"]
  }
}
}
